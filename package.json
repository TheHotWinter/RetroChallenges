{
  "name": "retrochallenges",
  "version": "1.0.0",
  "description": "RetroChallenges Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "retro",
    "challenges",
    "emuhawk",
    "nes",
    "gaming"
  ],
  "author": "RetroChallenges Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.retrochallenges.app",
    "productName": "RetroChallenges",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
